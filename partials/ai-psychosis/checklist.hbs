<style>
  .split-screen-section {
    position: relative;
    width: 100vw;
    min-height: 100vh;
    margin-left: calc(-50vw + 50%);
    display: flex;
    background: #040D12;
  }

  .split-left,
  .split-right {
    width: 50%;
    height: 100vh;
    position: sticky;
    top: 0;
  }

  .split-left {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 4rem;
  }

  .scroll-checklist {
    max-width: 500px;
    width: 100%;
  }

  .checklist-item {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
    margin-bottom: 2.5rem;
    opacity: 0;
    transform: translateX(-30px);
    transition: all 0.6s ease-out;
  }

  .checklist-item.visible {
    opacity: 1;
    transform: translateX(0);
  }

  .checkbox {
    flex-shrink: 0;
    width: 32px;
    height: 32px;
    border: 2px solid #5C8374;
    border-radius: 4px;
    position: relative;
    transition: all 0.3s ease;
  }

  .checklist-item.visible .checkbox {
    background: #5C8374;
    border-color: #93B1A6;
  }

  .checkbox::after {
    content: '';
    position: absolute;
    left: 9px;
    top: 4px;
    width: 8px;
    height: 14px;
    border: solid #040D12;
    border-width: 0 3px 3px 0;
    transform: rotate(45deg) scale(0);
    transition: transform 0.3s ease 0.2s;
  }

  .checklist-item.visible .checkbox::after {
    transform: rotate(45deg) scale(1);
  }

  .checklist-text {
    color: #e8e8e8;
    font-size: 1.3rem;
    line-height: 1.6;
    padding-top: 0.25rem;
  }

  .split-right {
    overflow: hidden;
    position: relative;
  }

  .split-video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  @media (max-width: 1024px) {
    .split-screen-section {
      flex-direction: column;
    }

    .split-left,
    .split-right {
      width: 100%;
      position: relative;
    }

    .split-left {
      min-height: 100vh;
      padding: 2rem;
    }

    .split-right {
      height: 60vh;
    }
  }
</style>

<script>
  // Scroll animation for checklist items
  function initChecklistAnimation() {
    const checklistItems = document.querySelectorAll('.checklist-item');

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry, index) => {
        if (entry.isIntersecting) {
          setTimeout(() => {
            entry.target.classList.add('visible');
          }, index * 150);
        }
      });
    }, {
      threshold: 0.3,
      rootMargin: '0px 0px -100px 0px'
    });

    checklistItems.forEach(item => {
      observer.observe(item);
    });
  }

  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initChecklistAnimation);
  } else {
    initChecklistAnimation();
  }
</script>
