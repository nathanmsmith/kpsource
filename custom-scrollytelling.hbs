    font-size: 1.8rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-weight: 600;
  }

  .article-content p {
    color: #e8e8e8;
    font-size: 1.1rem;
    line-height: 1.8;
    margin-bottom: 1.5rem;
  }

  .dropcap {
    float: left;
    font-size: 5rem;
    line-height: 0.8;
    margin: 0.1em 0.1em 0 0;
    color: #e8e8e8;
    font-weight: 900;
  }

  .fullscreen-image-section {
    position: relative;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding: 4rem;
  }

  .fullscreen-image-section img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .pull-quote {
    position: relative;
    z-index: 2;
    max-width: 500px;
    background: rgba(4, 13, 18, 0.85);
    padding: 3rem;
    border-left: 4px solid #5C8374;
    backdrop-filter: blur(10px);
  }

  .pull-quote blockquote {
    margin: 0;
    font-size: 2rem;
    line-height: 1.4;
    color: #e8e8e8;
    font-style: italic;
    font-weight: 400;
  }

  .pull-quote cite {
    display: block;
    margin-top: 1.5rem;
    font-size: 1.2rem;
    color: #5C8374;
    font-style: normal;
    font-weight: 600;
  }

  @media (max-width: 768px) {
