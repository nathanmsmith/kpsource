    }

    .article-inner {
      padding: 2rem;
    }

    .article-content h2 {
      font-size: 2rem;
    }

    .article-content h3 {
      font-size: 1.5rem;
    }

    .article-content p {
      font-size: 1rem;
    }

    .dropcap {
      font-size: 3.5rem;
    }

    .fullscreen-image-section {
      padding: 2rem;
      justify-content: center;
    }

    .pull-quote {
      max-width: 100%;
      padding: 2rem;
    }

    .pull-quote blockquote {
      font-size: 1.5rem;
    }

    .pull-quote cite {
      font-size: 1rem;
    }
  }
</style>

